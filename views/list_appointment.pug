doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title List Appointment 
        link(rel="stylesheet" href="css/navbar.css")
    body 
        .navbar 
            ul 
                li 
                    a(href="/") Home 

        table 
            thead 
                tr 
                    th Patient Name 
                    th Patient Surname 
                    th Patient Tc No 
                    th Department Name 
                    th Doctor Name Surname 
                    th Appointment Date
                    th Appointment Time 
            tbody 
                each appointment in appointments 
                    tr 
                        td=appointment.patientname 
                        td=appointment.patientsurname 
                        td=appointment.patienttcno 
                        td=appointment.departmentname 
                        td=appointment.doctornamesurname 
                        td=appointment.appointmentdate 
                        td=appointment.hour 
